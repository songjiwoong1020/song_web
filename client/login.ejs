    <script>
        function kakaoLogin(){
            const data = axios.get('/api/kakao')
            .then(() =>{
                console.log(data.data);
            })
            .catch((err) => {
                console.error(err);
            });
        }
        function loginWithKakao() {
            Kakao.Auth.login({
                success: function(res) {
                    loginAfter();
                },
                fail: function(err) {
                    alert(JSON.stringify(err))
                },
            });
         
        }
        function loginAfter() {
            Kakao.Auth.authorize({
                redirectUri: 'http://localhost:8001/api/oauth'
            })
        }
    </script>
